<div class="booyah-box">
  <div class="col-xs-4">
<%= image_tag 'user.png'%>
  </div>

<div class="col-xs-8">
  <h1> <%= @user.email %></h1>
  <h3> Member since <%= @user.created_at.strftime('%B %d, %Y') %> </h3>
  <h4> <%= @user.comments.count %> total comments </h4>
  <h4> <%= @user.comments.where(rating:'5_stars').count %> Total 5 Star Reviews </h4>
</div>
<div class="clear"></div>
</div>

<br /><br />
<h1 class="text-center">My Comments</h1>
<br /><br />

<% @user.comments.each do |c| %>

  <div class="col-xs-12 col-sm-6">
   <h2 class="text-center"><%= link_to c.place.name, place_path(c.place) %></h2>
    <blockquote>
      <% if c.humanized_rating.present? %>
        <b><%= c.humanized_rating %></b> -
      <% end %>
      <%= c.message %>
      <small><%= c.user.email %></small>
    </blockquote>
  </div>

  <% end %>